@page "{tagName?}"
@model IntranetCore.WebClient.Pages.Tags.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Tag.Nombre</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Tag.Nombre"></label>
        <input asp-for="Tag.Nombre" readonly class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Tag.HexColor"></label>
        <input asp-for="Tag.HexColor" class="form-control"/>
        <span class="text-danger" asp-validation-for="Tag.HexColor"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

